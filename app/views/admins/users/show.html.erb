<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
      <div class="col-md-9 offset-md-2">
       <h2><%= image_tag 'logo8.png', size:'250x50', class: "subtitle01" %></h2>
        <table class="usertable1">
          <tbody>
            <tr>
              <td>会員No.</td>
              <td><%= @user.id %></td>
            </tr>
             <tr>
              <td>ユーザー名</td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @user.telephone_number %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <% if @user.validation == false %>
                  有効
                <% else %>
                  退会
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-9 offset-md-2">
      <%= link_to "情報を編集", edit_admins_user_path(@user.id), class: "btn btn-success clickbutton1" %>
    </div>
  </div>
</div>