<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
      <div class="col-md-9 offset-md-2">
        <h2>管理者新規登録</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "admins/shared/error_messages", resource: resource %>
            <div class="field">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signupdata" %>
            </div>
            <div class="field">
              <%= f.label :password, "パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字のパスワードは必須)</em>
                <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "signupdata" %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation, "パスワード(再入力)" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signupdata" %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録", class:"btn btn-success signcontent" %>
            </div>
          <% end %>
          <%= render "admins/shared/links" %>
    </div>
  </div>
</div>