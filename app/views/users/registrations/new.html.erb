<div class="container">
  <div class="row">
    <h3 class="ms-1">新規登録</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
        <table>
          <tbody>
            <tr>
              <td><%= f.label :name, "ユーザー名" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.text_field :email, autocomplete: "email"  %></td>
            </tr>
            <tr>
              <td><%= f.label :telephone_number, "電話番号" %></td>
              <td><%= f.text_field :telephone_number  %></td>
            </tr>
            <tr>
              <td><%= f.label :introduction, "自己紹介" %></td>
              <td><%= f.text_field :introduction %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード" %></td>
              <td>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :password_confirmation, "パスワード確認用" %></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td><%= f.submit "ログイン", class:"btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>