<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-9 offset-md-1">
      <h2>パスワードを忘れてしまったら?</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email, "メールアドレス", class: "signupdata" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signupdata" %>
          </div>
          <div class="actions">
            <%= f.submit "パスワード再発行", class: "btn btn-primary signcontent" %>
          </div>
        <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>