<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>ログイン</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-success" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>

        <p class="text-center text-background">会員登録がお済みでない方</p>
        <p class="text-center">こちらから新規登録を行って下さい。</p>
        <div><%= link_to "新規作成",new_user_registration_path, class:"btn btn-success" %></div>

    </div>
  </div>
</div>