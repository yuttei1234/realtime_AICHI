<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= attachment_image_tag @post_image, format: 'jpg', fallback: 'no_image.png', size: '400x400' %>
        <% if @user.id == current_user.id %>
        <%= link_to "編集する", edit_public_post_image_path(@post_image.id), class:"btn btn-success" %>
        <% end %>
      <%= @post_image.user.name %>
        <% if post_image.favorited_by?(current_user) %>
          <%= link_to public_post_image_favorites_path(post_image), method: :delete do %>
          ♥ <%= post_image.favorites.count %> いいね
          <% end %>
        <% else %>
          <%= link_to public_post_image_favorites_path(post_image), method: :post do %>
          ♡ <%= post_image.favorites.count %> いいね
          <% end %>
        <% end %>
      <%= @post_image.title %>
      <%= @post_image.caption %>

      <% @post_images.post_comments.each do |post_comment| %>
        <%= %>
        <%= %>




    </div>
  </div>
</div>